generator client {
  provider     = "prisma-client"
  output       = "../generated"
  moduleFormat = "esm"
  runtime      = "bun"
}

datasource db {
  provider = "postgresql"
}

// User model
model User {
  id                String           @id @default(cuid())
  email             String           @unique
  name              String?
  avatarUrl         String?
  pushToken         String?
  isPublic          Boolean          @default(true)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  goals             Goal[]
  groupMemberships  GroupMember[]
  goalUpdates       GoalUpdate[]
  ownedGroups       Group[]          @relation("GroupOwner")
  notifications     Notification[]
  // Gang relationships (mutual friends)
  gangRequestsSent     GangRequest[] @relation("GangRequestSender")
  gangRequestsReceived GangRequest[] @relation("GangRequestReceiver")
  gangMembershipsA     Gang[]        @relation("GangUserA")
  gangMembershipsB     Gang[]        @relation("GangUserB")
  // Crew relationships
  ownedCrews        Crew[]           @relation("CrewOwner")
  crewMemberships   CrewMember[]
  // Hidden groups
  hiddenGroups      HiddenGroup[]
}

// Goal model with surpass support
model Goal {
  id            String       @id @default(cuid())
  title         String
  description   String?
  coverImageUrl String?
  targetValue   Float
  currentValue  Float        @default(0)
  unit          String       // e.g., "$", "miles", "hours", "books"
  category      String?      // e.g., "health", "finance", "personal", "relationships", "ecology", "entertainment", "spirituality", "other"
  status        String       @default("active") // "active" | "completed" | "failed" | "given_up" | "paused"
  timeframe     String?      // "daily" | "weekly" | "monthly" | "yearly" | "custom"
  startDate     DateTime     @default(now())
  endDate       DateTime
  isCompleted   Boolean      @default(false)
  isSurpassed   Boolean      @default(false)
  completedAt   DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId       String?
  group         Group?       @relation(fields: [groupId], references: [id], onDelete: SetNull)
  updates       GoalUpdate[]

  @@index([userId])
  @@index([groupId])
  @@index([status])
}

// Goal updates with proof upload
model GoalUpdate {
  id          String   @id @default(cuid())
  amount      Float    // The value added (e.g., $12 earned)
  note        String?
  proofUrl    String?  // URL to uploaded image proof
  proofType   String?  // "image" | "document"
  createdAt   DateTime @default(now())
  goalId      String
  goal        Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([goalId])
  @@index([userId])
}

// Group model for accountability groups
model Group {
  id          String        @id @default(cuid())
  name        String
  description String?
  avatarUrl   String?
  inviteCode  String        @unique @default(cuid())
  isPublic    Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  ownerId     String
  owner       User          @relation("GroupOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     GroupMember[]
  goals       Goal[]

  @@index([ownerId])
}

// Group membership
model GroupMember {
  id        String   @id @default(cuid())
  role      String   @default("member") // "admin" | "member"
  joinedAt  DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId   String
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
}

// Notification model for push notifications
model Notification {
  id        String   @id @default(cuid())
  title     String
  body      String
  type      String   // "goal_completed" | "goal_surpassed" | "group_invite" | "goal_update" | "gang_request"
  data      Json?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Gang - Mutual friend relationship between two users
model Gang {
  id        String   @id @default(cuid())
  userAId   String
  userA     User     @relation("GangUserA", fields: [userAId], references: [id], onDelete: Cascade)
  userBId   String
  userB     User     @relation("GangUserB", fields: [userBId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userAId, userBId])
  @@index([userAId])
  @@index([userBId])
}

// Gang request - Pending mutual friend request
model GangRequest {
  id         String   @id @default(cuid())
  senderId   String
  sender     User     @relation("GangRequestSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiverId String
  receiver   User     @relation("GangRequestReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  status     String   @default("pending") // "pending" | "accepted" | "rejected"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([senderId, receiverId])
  @@index([senderId])
  @@index([receiverId])
}

// Hidden groups - Groups a user has chosen to hide
model HiddenGroup {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId   String
  createdAt DateTime @default(now())

  @@unique([userId, groupId])
  @@index([userId])
}

// Crew model - A gang/tribe of people containing groups, goals, and members
// This is the enhanced "Gang" concept - a community/crew that members belong to
model Crew {
  id          String       @id @default(cuid())
  name        String
  description String?
  avatarUrl   String?
  coverUrl    String?
  inviteCode  String       @unique @default(cuid())
  isPublic    Boolean      @default(false)
  maxMembers  Int          @default(50)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  ownerId     String
  owner       User         @relation("CrewOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     CrewMember[]
  groups      CrewGroup[]
  goals       CrewGoal[]
  messages    CrewMessage[]
  
  @@index([ownerId])
  @@index([isPublic])
}

// Crew membership - Users who belong to a crew
model CrewMember {
  id        String   @id @default(cuid())
  role      String   @default("member") // "owner" | "admin" | "moderator" | "member"
  nickname  String?  // Optional crew-specific nickname
  joinedAt  DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  crewId    String
  crew      Crew     @relation(fields: [crewId], references: [id], onDelete: Cascade)

  @@unique([userId, crewId])
  @@index([userId])
  @@index([crewId])
}

// Crew groups - Accountability groups that belong to a crew
model CrewGroup {
  id        String   @id @default(cuid())
  crewId    String
  crew      Crew     @relation(fields: [crewId], references: [id], onDelete: Cascade)
  groupId   String
  addedAt   DateTime @default(now())
  
  @@unique([crewId, groupId])
  @@index([crewId])
  @@index([groupId])
}

// Crew goals - Shared goals for the entire crew
model CrewGoal {
  id            String   @id @default(cuid())
  title         String
  description   String?
  targetValue   Float
  currentValue  Float    @default(0)
  unit          String
  status        String   @default("active") // "active" | "completed" | "failed"
  startDate     DateTime @default(now())
  endDate       DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  crewId        String
  crew          Crew     @relation(fields: [crewId], references: [id], onDelete: Cascade)
  createdById   String

  @@index([crewId])
  @@index([status])
}

// Crew messages - Chat/activity feed for the crew
model CrewMessage {
  id        String   @id @default(cuid())
  content   String
  type      String   @default("message") // "message" | "announcement" | "goal_update" | "member_joined" | "milestone"
  createdAt DateTime @default(now())
  crewId    String
  crew      Crew     @relation(fields: [crewId], references: [id], onDelete: Cascade)
  authorId  String

  @@index([crewId])
  @@index([createdAt])
}
